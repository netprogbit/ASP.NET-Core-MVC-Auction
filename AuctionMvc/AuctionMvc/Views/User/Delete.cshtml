@model UserViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container w-max-30">
    <h2>Deleting Category</h2>
    <form method="POST" asp-action="Delete" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Id"></label>
            <input class="form-control" asp-for="Id" readonly>
        </div>
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input class="form-control" asp-for="FirstName" readonly>
        </div>
        <div class="form-group">
            <label asp-for="LastName"></label>
            <input class="form-control" asp-for="LastName" readonly>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input class="form-control" asp-for="Email" readonly>
        </div>
        <div class="form-group">
            <label asp-for="Role"></label>
            <input class="form-control" asp-for="Role" readonly>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
